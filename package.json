{
  "name": "custom-quests",
  "displayName": "Custom Quests",
  "fullName": "Trap-CustomQuests",
  "version": "3.2.0-rc.1",
  "main": "src/mod.js",
  "license": "MIT",
  "author": "Trap",
  "sptVersion": "3.9.x",
  "scripts": {
    "zip:files": "node scripts/create-zip.js",
    "clean:distquests": "node scripts/clean-dist-quests.js",
    "copy:files": "mkdirp ./dist && cp package.json ./dist && cp README.md ./dist && cp LICENSE ./dist && cpr config ./dist/config && cpr docs ./dist/docs && cpr quests ./dist/quests && npm run clean:distquests",
    "check:dist": "node scripts/check-dist-quests.js && node scripts/check-dist-config.js",
    "build:release": "npm run rebuild && npm run copy:files && npm run check:dist && npm run zip:files",
    "clean": "rimraf dist tmp 'src/**/*.js' Trap-CustomQuests*",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-pattern '*.js' .",
    "lint:all": "npm run prettier:check && npm run lint",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test:all": "npm run lint:all && npm run build:release",
    "test:ci": "npm run test:all",
    "test": "tsc --noEmit && npm run lint:all"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.5",
    "@types/node": "^20.14.11",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "bestzip": "2.2.1",
    "eslint": "8.56.0",
    "jsonc": "^2.0.0",
    "cpr": "^3.0.1",
    "mkdirp": "^3.0.1",
    "i18n": "^0.15.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsyringe": "4.6.0",
    "typescript": "4.6.4",
    "winston": "^3.7.2",
    "ws": "^8.11.0"
  }
}
