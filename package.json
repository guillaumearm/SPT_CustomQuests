{
  "name": "custom-quests",
  "displayName": "Custom Quests",
  "fullName": "Trap-CustomQuests",
  "version": "3.2.3",
  "main": "src/mod.js",
  "license": "MIT",
  "author": "Trap",
  "loadBefore": [],
  "loadAfter": [],
  "incompatibilities": [],
  "isBundleMod": false,
  "sptVersion": "3.9.x",
  "scripts": {
    "dev:install": "npm run build:release && node scripts/install-files.js",
    "zip:files": "node scripts/create-zip.js",
    "clean:distquests": "node scripts/clean-dist-quests.js",
    "check:dist": "node scripts/check-dist-quests.js && node scripts/check-dist-config.js",
    "prepare:files": "node scripts/prepare-files.js && npm run clean:distquests",
    "build:release": "npm run rebuild && npm run prepare:files && npm run check:dist && npm run zip:files",
    "clean": "rimraf -g dist tmp src/**/*.js src/**/*.js.map Trap-CustomQuests*",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-pattern '*.js' .",
    "lint:all": "npm run prettier:check && npm run lint",
    "rebuild": "npm run clean && npm run build",
    "build": "tsc",
    "test:all": "npm run lint:all && npm run build:release",
    "test:ci": "npm run test:all",
    "test": "tsc --noEmit && npm run lint:all"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.5",
    "@types/node": "^20.14.11",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "bestzip": "2.2.1",
    "eslint": "8.56.0",
    "jsonc": "^2.0.0",
    "cpr": "^3.0.1",
    "mkdirp": "^3.0.1",
    "i18n": "^0.15.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsyringe": "4.6.0",
    "typescript": "4.6.4",
    "winston": "^3.7.2",
    "ws": "^8.11.0"
  }
}
